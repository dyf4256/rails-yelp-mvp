<div class="container mt-4">
  <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f|%>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit %>
  <% end %>
  <br>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant), :class => "btn btn-primary btn-sm mt-0 fst-italic"%>
</div>
