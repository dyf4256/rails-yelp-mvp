<div class="container">
  <h1 class="mt-3"><%= @restaurant.name %></h1>
  <div class="card mt-4 p-2">
    <div id="restaurant" class="border-bottom ">
      <p>Address: <%= @restaurant.address %></p>
      <p>Phone Number: <%= @restaurant.phone_number %></p>
      <p>Category: <%= @restaurant.category.capitalize %></p>
    </div>
    <style>
    .small {
      width:110px;
    }
    </style>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary btn-sm small mt-2"%>
    <ul class="reviews border-bottom pb-2 ps-3">
      <% @reviews.each do |review|%>
        <li class="my-2">
          <%= "⭐️" * review.rating %>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
     <%= link_to "Back to list", restaurants_path, class: "btn btn-primary btn-sm small" %>
  </div>
</div>
